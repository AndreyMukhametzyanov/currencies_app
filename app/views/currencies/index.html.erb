<h5>All information about wolds currencies at <%= Currency.all.first.created_at.strftime('%d.%m.%Y %H:%M:%S') %></h5>

<div class="row">
  <div class="col-sm-12">
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @currencies.each do |currency| %>
        <div class="col mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= currency.name %></h5>
              <p class="card-text"><%= link_to 'Show about currency', currency_path(currency.char_code), class: 'btn btn-outline-primary' %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>